<button @onclick="OnClick" class="p-2 mx-1 w-1/3 my-2 bg-gray-100 text-md subpixel-antialiased text-gray-500 border w-full border-gray-500 hover:bg-gray-500 hover:text-white">
    @Text
</button>

@code {
    [Parameter]
    public string? Text { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
}