<button @onclick="OnClick" class="p-3 w-full mx-0 md:mx-3 my-2 bg-green-100 text-lg block subpixel-antialiased text-green-500 border border-green-500 hover:bg-green-500 hover:text-white">
    @Text
</button>

@code {
    [Parameter]
    public string? Text { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
}