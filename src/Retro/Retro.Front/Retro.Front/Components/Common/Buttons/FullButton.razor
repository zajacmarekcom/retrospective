@inherits BaseComponent

<button @onclick="OnClick" type="@(IsSubmit ? "submit" : "button")" class="@($"p-3 {(BigButton ? "aspect-square text-2xl" : "aspect-auto text-lg")} w-full mx-0 md:mx-3 my-2 bg-orange-100 block subpixel-antialiased text-orange-500 border border-orange-500 hover:bg-orange-500 hover:text-white {Class}")">
    @Text
</button>

@code {
    [Parameter]
    public string? Text { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
    
    [Parameter]
    public bool BigButton { get; set; }
    
    [Parameter]
    public bool IsSubmit { get; set; }
}