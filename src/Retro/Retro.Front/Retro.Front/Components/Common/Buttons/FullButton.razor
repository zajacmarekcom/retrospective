<button @onclick="OnClick" class="p-3 w-full mx-3 my-2 bg-orange-100 text-lg block subpixel-antialiased text-orange-500 border border-orange-500 hover:bg-orange-500 hover:text-white">
    @Text
</button>

@code {
    [Parameter]
    public string? Text { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
}